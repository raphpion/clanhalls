{
  "name": "@osrs-clan-manager/backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "ci": "npm ci && npm run lint && npm run test",
    "compose:local": "docker-compose -f docker-compose.local.yml up",
    "dev": "SET \"NODE_ENV=development\" && nodemon --watch",
    "lint": "eslint ./src --max-warnings=0",
    "start": "node dist/index.js",
    "test": "jest",
    "typeorm": "typeorm-ts-node-commonjs",
    "db:drop": "npm run typeorm schema:drop -- -d ./src/db/index.ts",
    "migrate": "npm run typeorm migration:run -- -d ./src/db/index.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./src/db/index.ts",
    "migration:generate": "npm run typeorm -- migration:generate -d ./src/db/index.ts",
    "migration:create": "npm run typeorm -- migration:create -d ./src/db/index.ts",
    "db:reset": "npm run db:drop && npm run db:migrate"
  },
  "author": "RaphaÃ«l Pion",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "google-auth-library": "^9.11.0",
    "joi": "^17.13.3",
    "pg": "^8.12.0",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.2.2",
    "slugify": "^1.6.6",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  }
}
